<div class= 'container-fluid text-center'>
  <h1>Création de compte</h1>
</div>

<div class= 'container'>
  <%= form_for @user do |t| %>
    <div class="form-group">
      <label>Prénom</label>
      <%= t.text_field :first_name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <label>Nom</label>
      <%= t.text_field :last_name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <label>Description</label>
      <%= t.text_field :description, class: 'form-control' %>
    </div>
    <div class="form-group">
      <label>Email</label>
      <%= t.text_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <label>Age</label>
      <%= t.text_field :age, class: 'form-control' %>
    </div>
    <div class="form-group">
      <label>Mot de passe</label>
      <%= t.text_field :password, class: 'form-control' %>
    </div>
    <div>
    <label>Ville</label>
    </div>
    <div>
    <%= t.select(:city_id, options_from_collection_for_select(City.all, :id, :name)) %> 
    </div>
    <div class="form-group">
      <button type="submit" class='btn btn-primary'>Créer mon compte</button>
    </div>
  <% end %>
</div>

